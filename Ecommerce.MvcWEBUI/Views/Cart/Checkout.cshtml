@using Ecommerce.MvcWEBUI.Models
@model ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Shipping Details</h3>
            <p>Please fill all required areas.</p>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                
                <div class="form-group row">
                    <label for="inputEmail3" class="col-md-2  flex-nowrap">User Name</label>
                    <div class="col-md-6">
                        <span>@User.Identity.Name</span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-md-2  flex-nowrap">AddressTitle</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.AddressTitle, new { @class = "form-control", placeholder = Html.DisplayName("ex: Home") })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-md-2  flex-nowrap">Address</label>
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-md-2  flex-nowrap">City</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-md-2  flex-nowrap">State</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-md-2  flex-nowrap">Zipcode</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.Zipcode, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Checkout</button>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

